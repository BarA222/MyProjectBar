<Window x:Class="client.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="ResetPassword" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter Username:" />
        <TextBlock Text="Enter new Password:" Grid.Row="1"/>
        <TextBox Name="username" VerticalAlignment="Top" Width="100" Height="20"  Grid.Column="1"/>
        <TextBox Name="password" VerticalAlignment="Top"  Width="100" Height="20" Grid.Row="1" Grid.Column="1"/>
        <Button VerticalAlignment="Top" Grid.Row="2" Content="Reset" Width="100" Height="30" Click="ResetPasswordClick"/>
        <Button VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" Content="Back" Width="100" Height="30" Click="BackToLoginClick"/>
    </Grid>
</Window>
